{
  "name": "mgk-layouts",
  "version": "0.0.1",
  "description": "",
  "main": "app.js",
  "dependencies": {
    "lodash": "^4.17.15",
    "nunjucks": "^3.2.0",
    "victor": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^12.7.1",
    "chai": "^4.2.0",
    "express": "^4.17.1",
    "fast-check": "^1.16.0",
    "npm-watch": "^0.6.0",
    "tap": "^14.6.1",
    "typescript": "^3.5.3"
  },
  "watch": {
    "test": {
      "patterns": [
        "app",
        "src",
        "test"
      ],
      "extensions": "js,njk"
    },
    "serve": {
      "patterns": [
        "."
      ],
      "extensions": "js,njk",
      "ignore": [
        "test/"
      ]
    }
  },
  "scripts": {
    "clean" : "rm -rf dist/",
    "test": "node_modules/.bin/tap -Rspec --test-ignore=test/victor-assert.js",
    "watch-tests": "npm-watch test",
    "serve": "node app.js",
    "watch-serve": "npm-watch serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://petekneller@github.com/petekneller/mgk-layouts.git"
  }
}
